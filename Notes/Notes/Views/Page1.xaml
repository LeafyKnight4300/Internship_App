<?xml version="1.0" encoding="utf-8" ?>
 <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:menu="Windows.UI.Xaml.Controls.Primitives"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.Page1"
             Title="This is a Git Push Test"
              >
     
    <ContentPage.Content>
        <StackLayout Margin="0">
            <Grid ColumnDefinitions="*,*"> 
                <Picker Title="Select an aircraft"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                     >
                    <Picker.Items>
                        <x:String>NES Classic</x:String>
                    </Picker.Items>
                </Picker>
                <Button Text="Takeoff"
                        Grid.Row="1"
                        Grid.Column="0"
                        Clicked="OnDisplayAlertButtonClicked"
                        />
                <Button Text="Landing"
                        Grid.Row="1"
                        Grid.Column="1"
                        Clicked="OnDisplayAlertButtonClicked"
                        />

                <Image Source="SWEG.png"

                       Grid.Row="3" 

                       WidthRequest="200" 
                       Grid.RowSpan="5"
                       Grid.ColumnSpan="2"/>
                       
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

    
    